#include<iostream>
using namespace std;
int main()
{
    int n, i, *p, array[35];
    p = &array[0];
    cout << "Enter how many number(s) : ";
    cin >> n;
    cout << "\nEnter " << n << " number(s) in the array.........\n";
    for(i = 0; i < n; i++)
        {
            cout << "Enter a number in array[" << i + 1 << "] : ";
            cin >> array[i];
        }
    cout << "\nThe value(s) inside the array is/are .......\n";
    for(i = 0; i < n; i++)
    cout << *p + i << "\n";
    return 0;
}
